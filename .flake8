[flake8]
# Exclude the grpc generated code
exclude = ./manim/grpc/gen/*
max-complexity = 15
max-line-length = 88
statistics = True

per-file-ignores =
    manim/utils/scale.py:D401
    scripts/template_docsting_with_example.py:D414 D412
    manim/cli/cfg/group.py:D401

docstring-convention=numpy

min_python_version = 3.7.0

# TODO - Add Flake-RST-Docstrings Plugin

extend-select = B9

                # General Compatibility
extend-ignore = E203, E501,
                W503,
                D202, D212, D213, D404,

                # Duplicates
                R504,

                # Not Going To Fix
                E402,
                F401, F403, F405,
                PT022,
                D107,

                # TODO - Remove when possible
                F811, B008, B006, D301,

                # FIXME - Waiting for bugfix ( https://github.com/PyCQA/pydocstyle/issues/566 )
                D401,

                # Plug-in: flake8-builtins
                A001, A002, A003,

                # Plug-in: flake8-simplify
                SIM105, SIM106, SIM119,

                # Plug-in: flake8-pie
                PIE786, PIE803,

                # Plug-in: flake8-comprehensions
                C901,

                # Plug-in: flake8-pytest-style
                PT004, PT006, PT011,

                # Plug-in: flake8-docstrings
                D100, D101, D102, D103, D104, D105, D106,
                D205, D209,
                D400,
